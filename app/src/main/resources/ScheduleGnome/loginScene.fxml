<StackPane prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ScheduleGnome.loginFXMLController">
   <children>
      <GridPane id="body" alignment="CENTER" hgap="10" vgap="10" StackPane.alignment="CENTER">
         <padding>
            <Insets bottom="10" left="25" right="25" top="25" />
         </padding>
          <GridPane id="rectangle" alignment="CENTER" hgap="10" vgap="10" StackPane.alignment="CENTER">
         <Text id="welcomeTitle" text="SCHEDULE GNOME" GridPane.columnSpan="2" />
               <Label id="usernameLabel" focusTraversable="false" text="Username:" GridPane.rowIndex="1" />
      
               <TextField fx:id="usernameField" GridPane.rowSpan="1" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Enter username..." />
      
               <Label id="passwordLabel" focusTraversable="false" text="Password:" GridPane.rowIndex="2" />
      
               <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Enter password..."/>
      
               <HBox alignment="CENTER" spacing="44.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <Button id="loginButton" alignment="TOP_LEFT" defaultButton="true" onAction="#loginButton" text="Login" />
            <Button id="registerButton" layoutX="107.0" layoutY="10.0" onAction="#registerButton" text="Register" />
         </HBox>
      
               <Text fx:id="actiontarget" textAlignment="RIGHT" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints hgrow="NEVER" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="NEVER" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
          </GridPane>
      </GridPane>
   </children>
